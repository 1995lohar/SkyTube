<resources>
	
	<!-- SkyTube theme -->
	<style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
	</style>

	<!-- *************************************************************************************** -->

	<style name="GridTextView" parent="AppTheme">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#FFF</item>
		<item name="android:background">#000</item>
	</style>

	<style name="GridMicroDetailsTextView" parent="GridTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:padding">2dp</item>
		<item name="android:background">#BA000000</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">12.9sp</item>
	</style>

	<style name="GridDetailsTextView" parent="GridTextView">
		<item name="android:textColor">#808080</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">12.9sp</item>
	</style>

	<!-- *************************************************************************************** -->

	<style name="VideoPlayerActivityTheme" parent="AppTheme">
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:actionBarStyle">@style/VideoPlayerActionBarTheme</item>
	</style>

	<style name="VideoPlayerActionBarTheme" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse" >
		<!-- Actionbar background colour ~~ which is the same as com.android.internal.R.layout.media_controller
				(used to be #BB000000) -->
		<item name="android:background">#CC000000</item>

		<!-- hide app's icon/logo -->
		<item name="android:icon">@android:color/transparent</item>

		<item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
	</style>

</resources>
